<Window x:Class="LicenseConsole.ClipboardLicenseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="_window"
    Style="{StaticResource Dialog}"
    Title="License on Clipboard" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Width="400" SizeToContent="Height">
    <StackPanel Margin="20,15,20,15">
        <TextBox IsReadOnly="True" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="200" Text="{Binding ElementName=_window, Path=Log, Mode=OneWay}" />
        <Button IsDefault="True" IsCancel="True" HorizontalAlignment="Right" Margin="0,10,10,0">Close</Button>
    </StackPanel>
</Window>
